<% if user_signed_in? && @article.user == current_user %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% elsif comment.status != "private" %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
<p>
  <% if user_signed_in? %>
    <% if comment.user_id == current_user.id || @article.user == current_user %>
      <%= link_to "Edit comment", edit_article_comment_path(comment.article.id, comment.id) %> |
      <%= link_to "Destroy Comment", [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
</p>